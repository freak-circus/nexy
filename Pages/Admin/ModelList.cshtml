@page
@model Nexy.Pages.Admin.ModelListModel
@{
    ViewData["Title"] = "Список моделей";
}

<h2>Модели</h2>

<a class="btn" asp-page="CreateModel">Создать модель</a>

<table class="admin-table">
    <thead>
    <tr>
        <th>Имя</th>
        <th>Активна</th>
        <th>Аватар</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var m in Model.Models)
    {
        <tr>
            <td>@m.Name</td>
            <td>@(m.IsActive ? "Да" : "Нет")</td>
            <td><img src="@m.AvatarUrl" alt="avatar" width="40" height="40" /></td>
            <td>
                <a asp-page="EditModel" asp-route-id="@m.Id">Редактировать</a> |
                <a asp-page="AddPosts" asp-route-id="@m.Id">Фото</a> |
                <a asp-page="EditPosts" asp-route-id="@m.Id">Редактировать фото</a> |
                <form method="post" asp-page-handler="Delete" asp-route-id="@m.Id" style="display:inline">
                    <button type="submit" onclick="return confirm('Удалить?')">Удалить</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>