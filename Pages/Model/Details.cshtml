@page "{id:guid}"
@model Nexy.Pages.Model.DetailsModel
@{
    ViewData["Title"] = Model.Profile?.Name;
}

<div class="container">
    <div class="profile-card">
        <div class="profile-card__header">
            <img src="@Model.Profile!.AvatarUrl" alt="Avatar" class="profile-card__avatar" />
            <div>
                <h2 class="profile-card__name">@Model.Profile.Name</h2>
                <p class="profile-card__description">@Model.Profile.Description</p>
                <a href="https://@Model.Profile.OnlyLink">@Model.Profile.OnlyLink</a>
            </div>
        </div>
    </div>

    <div class="space-y-6">
        @foreach (var post in Model.Profile.Posts.OrderByDescending(p => p.CreatedAt))
        {
            <div class="feed-post">
                <img src="@post.ImageUrl" alt="Post" class="feed-post__image" />
                <p class="feed-post__caption">@post.Caption</p>
            </div>
        }
    </div>

    <div class="mt-8">
        <a asp-page="/Chat/Index" asp-route-modelId="@Model.Profile.Id" class="btn btn--primary">
            Написать
        </a>
    </div>
</div>