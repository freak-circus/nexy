<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nexy</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<nav class="navbar">
    <a href="/" class="navbar__brand">nexy</a>
    <div class="navbar__links">
        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Identity/Account/Logout" class="navbar__link">Log Out</a>
        }
        else
        {
            <a href="/Identity/Account/Login" class="navbar__link">Log In</a>
        }
    </div>
</nav>

<main>
    @RenderBody()
</main>

@RenderSection("Scripts", required: false)
</body>
</html>