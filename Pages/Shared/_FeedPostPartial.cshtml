@model Nexy.Data.ModelPost

<div class="bg-neutral-900 rounded-2xl shadow-md p-4 text-white max-w-xl mx-auto mb-6">
    <div class="flex items-center mb-2">
        <a asp-page="/Model/Details" asp-route-id="@Model.Model.Id" class="flex items-center space-x-3 hover:underline">
            <img src="@Model.Model.AvatarUrl" class="w-10 h-10 rounded-full mr-3"/>
            <div>
                <div class="font-semibold">@Model.Model.Name</div>
            </div>
        </a>


    </div>
    <img src="@Model.ImageUrl" class="rounded-xl w-full max-h-96 object-cover mb-2" />
    <p class="text-sm">@Model.Caption</p>
</div>